# Set here the desired C compiler and its optimization options
CC   = icc
COPT = -O2 -fp-model=precise
#DEBUG
#COPT = -O2 -m32 -fsingle-precision-constant -Wfloat-conversion -Wdouble-promotion

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = small_single_Global.h  small_single_Parameters.h  small_single_Sparse.h

SPSRC = small_single_JacobianSP.c \
	small_single_HessianSP.c  \
	small_single_StoichiomSP.c

SPOBJ = small_single_JacobianSP.o \
	small_single_HessianSP.o  \
	small_single_StoichiomSP.o


SRC =   small_single_Main.c      small_single_Integrator.c   \
	small_single_Function.c  small_single_Initialize.c   \
	small_single_Jacobian.c  small_single_LinearAlgebra.c\
	small_single_Rates.c     small_single_Hessian.c      \
	small_single_Stoichiom.c small_single_Util.c         \
	small_single_Monitor.c

OBJ =   small_single_Main.o      small_single_Integrator.o   \
	small_single_Function.o  small_single_Initialize.o   \
	small_single_Jacobian.o  small_single_LinearAlgebra.o\
	small_single_Rates.o     small_single_Hessian.o      \
	small_single_Stoichiom.o small_single_Util.o         \
	small_single_Monitor.o

STOCHSRC = small_single_Stochastic.c 
STOCHOBJ = small_single_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o small_single.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o small_single_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O small_single_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O small_single_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O small_single_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) small_single.exe small_single_*.mexglx small_single*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) small_single.exe small_single*.dat \
	small_single_*.c small_single_*.h small_single_*.map small_single_*.mexglx

small_single_Monitor.o: small_single_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

small_single_JacobianSP.o: small_single_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

small_single_HessianSP.o: small_single_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

small_single_StoichiomSP.o: small_single_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

small_single_Main.o: small_single_Main.c small_single_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_single_Integrator.o: small_single_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_single_Initialize.o: small_single_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_single_Function.o: small_single_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_single_Stochastic.o: small_single_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_single_Jacobian.o: small_single_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_single_LinearAlgebra.o: small_single_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_single_Rates.o: small_single_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_single_Hessian.o:  small_single_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_single_Stoichiom.o: small_single_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_single_Util.o: small_single_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

