# Set here the desired C compiler and its optimization options
CC   = gcc
COPT = -O3

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = strato_sp_Global.h  strato_sp_Parameters.h  strato_sp_Sparse.h

SPSRC = strato_sp_JacobianSP.c \
	strato_sp_HessianSP.c  \
	strato_sp_StoichiomSP.c

SPOBJ = strato_sp_JacobianSP.o \
	strato_sp_HessianSP.o  \
	strato_sp_StoichiomSP.o


SRC =   strato_sp_Main.c      strato_sp_Integrator.c   \
	strato_sp_Function.c  strato_sp_Initialize.c   \
	strato_sp_Jacobian.c  strato_sp_LinearAlgebra.c\
	strato_sp_Rates.c     strato_sp_Hessian.c      \
	strato_sp_Stoichiom.c strato_sp_Util.c         \
	strato_sp_Monitor.c

OBJ =   strato_sp_Main.o      strato_sp_Integrator.o   \
	strato_sp_Function.o  strato_sp_Initialize.o   \
	strato_sp_Jacobian.o  strato_sp_LinearAlgebra.o\
	strato_sp_Rates.o     strato_sp_Hessian.o      \
	strato_sp_Stoichiom.o strato_sp_Util.o         \
	strato_sp_Monitor.o

STOCHSRC = strato_sp_Stochastic.c 
STOCHOBJ = strato_sp_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o strato_sp.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o strato_sp_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O strato_sp_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O strato_sp_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O strato_sp_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) strato_sp.exe strato_sp_*.mexglx strato_sp*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) strato_sp.exe strato_sp*.dat \
	strato_sp_*.c strato_sp_*.h strato_sp_*.map strato_sp_*.mexglx

strato_sp_Monitor.o: strato_sp_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

strato_sp_JacobianSP.o: strato_sp_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

strato_sp_HessianSP.o: strato_sp_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

strato_sp_StoichiomSP.o: strato_sp_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

strato_sp_Main.o: strato_sp_Main.c strato_sp_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_sp_Integrator.o: strato_sp_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_sp_Initialize.o: strato_sp_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_sp_Function.o: strato_sp_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_sp_Stochastic.o: strato_sp_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_sp_Jacobian.o: strato_sp_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_sp_LinearAlgebra.o: strato_sp_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_sp_Rates.o: strato_sp_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_sp_Hessian.o:  strato_sp_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_sp_Stoichiom.o: strato_sp_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_sp_Util.o: strato_sp_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

