#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# User: Set here the F90 compiler and options
#       Pedefined compilers: INTEL, PGF, HPUX, LAHEY
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

#COMPILER = G95
#COMPILER = LAHEY
COMPILER = INTEL
#COMPILER = PGF
#COMPILER = HPUX
#COMPILER = GFORTRAN

FC_G95     = g95
FOPT_G95   = -cpp -O -pg -fbounds-check -fimplicit-none  -Wall -ftrace=full

FC_LAHEY   = lf95
# More aggressive for production runs:
#FOPT_LAHEY = -Cpp --pca -O
# More checking for debugging:
FOPT_LAHEY = -Cpp --chk a,e,s,u --pca --ap -O0 -g --trap --trace --chkglobal

FC_INTEL   = ifort 
# More aggressive for production runs:
FOPT_INTEL = -cpp -O -fp-model precise -pc80 -prec-div
# More checking for debugging:
#FOPT_INTEL = -cpp -O0 -fp-model strict -implicitnone -ftrapuv \
              -debug all -check all -warn all

FC_PGF     = pgf90
# More aggressive for production runs:
FOPT_PGF   = -Mpreprocess -O -fast -pc 80 -Kieee
# More checking for debugging:
#FOPT_PGF   = -Mpreprocess -O0 -Mbounds -Mchkfpstk -Mchkptr -Mchkstk \
#             -Ktrap=fp -pc 80 -Kieee

FC_HPUX    = f90
FOPT_HPUX  = -O -u +Oall +check=on

FC_GFORTRAN     = gfortran
FOPT_GFORTRAN   = -cpp -O

# define FULL_ALGEBRA for non-sparse integration
FC   = $(FC_$(COMPILER))
FOPT = $(FOPT_$(COMPILER)) # -DFULL_ALGEBRA

LIBS =
#LIBS = -llapack -lblas

# Command to create Matlab mex gateway routines 
# Note: use $(FC) as the mex Fortran compiler
MEX  = mex

GENSRC = chapman_f90_dp_Precision.f90  \
	 chapman_f90_dp_Parameters.f90     \
	 chapman_f90_dp_Global.f90  

GENOBJ = chapman_f90_dp_Precision.o    \
	 chapman_f90_dp_Parameters.o       \
	 chapman_f90_dp_Global.o     

FUNSRC = chapman_f90_dp_Function.f90 
FUNOBJ = chapman_f90_dp_Function.o 

JACSRC = chapman_f90_dp_JacobianSP.f90  chapman_f90_dp_Jacobian.f90
JACOBJ = chapman_f90_dp_JacobianSP.o    chapman_f90_dp_Jacobian.o

HESSRC = chapman_f90_dp_HessianSP.f90   chapman_f90_dp_Hessian.f90
HESOBJ = chapman_f90_dp_HessianSP.o     chapman_f90_dp_Hessian.o

STMSRC = chapman_f90_dp_StoichiomSP.f90 chapman_f90_dp_Stoichiom.f90 
STMOBJ = chapman_f90_dp_StoichiomSP.o   chapman_f90_dp_Stoichiom.o

UTLSRC = chapman_f90_dp_Rates.f90 chapman_f90_dp_Util.f90 chapman_f90_dp_Monitor.f90
UTLOBJ = chapman_f90_dp_Rates.o   chapman_f90_dp_Util.o   chapman_f90_dp_Monitor.o

LASRC  = chapman_f90_dp_LinearAlgebra.f90 
LAOBJ  = chapman_f90_dp_LinearAlgebra.o   

STOCHSRC = chapman_f90_dp_Stochastic.f90 
STOCHOBJ = chapman_f90_dp_Stochastic.o 

MAINSRC = chapman_f90_dp_Main.f90   chapman_f90_dp_Initialize.f90   chapman_f90_dp_Integrator.f90 chapman_f90_dp_Model.f90
MAINOBJ = chapman_f90_dp_Main.o     chapman_f90_dp_Initialize.o     chapman_f90_dp_Integrator.o   chapman_f90_dp_Model.o 

#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# User: modify the line below to include only the
#       objects needed by your application
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
ALLOBJ = $(GENOBJ) $(FUNOBJ) $(JACOBJ) $(HESOBJ) $(STMOBJ) \
	 $(UTLOBJ) $(LAOBJ)

#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# User: modify the line below to include only the
#       executables needed by your application
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
all:    exe

exe:	$(ALLOBJ) $(MAINOBJ) 
	$(FC) $(FOPT) $(ALLOBJ) $(MAINOBJ) $(LIBS) -o chapman_f90_dp.exe

stochastic:$(ALLOBJ) $(STOCHOBJ) $(MAINOBJ)
	$(FC) $(FOPT) $(ALLOBJ) $(STOCHOBJ) $(MAINOBJ) $(LIBS) \
	-o chapman_f90_dp_stochastic.exe

mex:    $(ALLOBJ)
	$(MEX) FC#$(FC) -fortran -O chapman_f90_dp_mex_Fun.f90     $(ALLOBJ)
	$(MEX) FC#$(FC) -fortran -O chapman_f90_dp_mex_Jac_SP.f90  $(ALLOBJ)
	$(MEX) FC#$(FC) -fortran -O chapman_f90_dp_mex_Hessian.f90 $(ALLOBJ)

clean:
	rm -f chapman_f90_dp*.o chapman_f90_dp*.mod \
	chapman_f90_dp*.dat chapman_f90_dp.exe chapman_f90_dp*.mexglx \
	chapman_f90_dp.map

distclean:
	rm -f chapman_f90_dp*.o chapman_f90_dp*.mod \
	chapman_f90_dp*.dat chapman_f90_dp.exe chapman_f90_dp.map \
	chapman_f90_dp*.f90 chapman_f90_dp_*.mexglx

chapman_f90_dp_Precision.o: chapman_f90_dp_Precision.f90 
	$(FC) $(FOPT) -c $<

chapman_f90_dp_Parameters.o: chapman_f90_dp_Parameters.f90 \
	            chapman_f90_dp_Precision.o
	$(FC) $(FOPT) -c $<

chapman_f90_dp_Monitor.o: chapman_f90_dp_Monitor.f90 \
	             chapman_f90_dp_Precision.o
	$(FC) $(FOPT) -c $<

chapman_f90_dp_Global.o: chapman_f90_dp_Global.f90 \
	            chapman_f90_dp_Parameters.o chapman_f90_dp_Precision.o
	$(FC) $(FOPT) -c $<

chapman_f90_dp_Initialize.o: chapman_f90_dp_Initialize.f90  $(GENOBJ) 
	$(FC) $(FOPT) -c $<

chapman_f90_dp_Function.o: chapman_f90_dp_Function.f90  $(GENOBJ) 
	$(FC) $(FOPT) -c $<

chapman_f90_dp_Stochastic.o: chapman_f90_dp_Stochastic.f90  $(GENOBJ) 
	$(FC) $(FOPT) -c $<

chapman_f90_dp_JacobianSP.o: chapman_f90_dp_JacobianSP.f90 $(GENOBJ)
	$(FC) $(FOPT) -c $<

chapman_f90_dp_Jacobian.o: chapman_f90_dp_Jacobian.f90  $(GENOBJ) chapman_f90_dp_JacobianSP.o
	$(FC) $(FOPT) -c $<

chapman_f90_dp_LinearAlgebra.o: chapman_f90_dp_LinearAlgebra.f90 $(GENOBJ) chapman_f90_dp_JacobianSP.o
	$(FC) $(FOPT) -c $<

chapman_f90_dp_Rates.o: chapman_f90_dp_Rates.f90  $(GENOBJ) 
	$(FC) $(FOPT) -c $<

chapman_f90_dp_HessianSP.o: chapman_f90_dp_HessianSP.f90  $(GENOBJ)
	$(FC) $(FOPT) -c $<

chapman_f90_dp_Hessian.o:  chapman_f90_dp_Hessian.f90 $(GENOBJ) chapman_f90_dp_HessianSP.o
	$(FC) $(FOPT) -c $<

chapman_f90_dp_StoichiomSP.o: chapman_f90_dp_StoichiomSP.f90 $(GENOBJ)
	$(FC) $(FOPT) -c $<

chapman_f90_dp_Stoichiom.o: chapman_f90_dp_Stoichiom.f90  $(GENOBJ) chapman_f90_dp_StoichiomSP.o
	$(FC) $(FOPT) -c $<

chapman_f90_dp_Util.o: chapman_f90_dp_Util.f90  $(GENOBJ) chapman_f90_dp_Monitor.o
	$(FC) $(FOPT) -c $<

chapman_f90_dp_Main.o: chapman_f90_dp_Main.f90  $(ALLOBJ) chapman_f90_dp_Initialize.o chapman_f90_dp_Model.o chapman_f90_dp_Integrator.o
	$(FC) $(FOPT) -c $<

chapman_f90_dp_Model.o: chapman_f90_dp_Model.f90  $(ALLOBJ) chapman_f90_dp_Integrator.o
	$(FC) $(FOPT) -c $<

chapman_f90_dp_Integrator.o: chapman_f90_dp_Integrator.f90  $(ALLOBJ)
	$(FC) $(FOPT) -c $<
