# Set here the desired C compiler and its optimization options
CC   = gcc
COPT = -O3

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = chapman_dp_Global.h  chapman_dp_Parameters.h  chapman_dp_Sparse.h

SPSRC = chapman_dp_JacobianSP.c \
	chapman_dp_HessianSP.c  \
	chapman_dp_StoichiomSP.c

SPOBJ = chapman_dp_JacobianSP.o \
	chapman_dp_HessianSP.o  \
	chapman_dp_StoichiomSP.o


SRC =   chapman_dp_Main.c      chapman_dp_Integrator.c   \
	chapman_dp_Function.c  chapman_dp_Initialize.c   \
	chapman_dp_Jacobian.c  chapman_dp_LinearAlgebra.c\
	chapman_dp_Rates.c     chapman_dp_Hessian.c      \
	chapman_dp_Stoichiom.c chapman_dp_Util.c         \
	chapman_dp_Monitor.c

OBJ =   chapman_dp_Main.o      chapman_dp_Integrator.o   \
	chapman_dp_Function.o  chapman_dp_Initialize.o   \
	chapman_dp_Jacobian.o  chapman_dp_LinearAlgebra.o\
	chapman_dp_Rates.o     chapman_dp_Hessian.o      \
	chapman_dp_Stoichiom.o chapman_dp_Util.o         \
	chapman_dp_Monitor.o

STOCHSRC = chapman_dp_Stochastic.c 
STOCHOBJ = chapman_dp_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o chapman_dp.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o chapman_dp_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O chapman_dp_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O chapman_dp_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O chapman_dp_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) chapman_dp.exe chapman_dp_*.mexglx chapman_dp*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) chapman_dp.exe chapman_dp*.dat \
	chapman_dp_*.c chapman_dp_*.h chapman_dp_*.map chapman_dp_*.mexglx

chapman_dp_Monitor.o: chapman_dp_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_dp_JacobianSP.o: chapman_dp_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_dp_HessianSP.o: chapman_dp_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_dp_StoichiomSP.o: chapman_dp_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_dp_Main.o: chapman_dp_Main.c chapman_dp_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_dp_Integrator.o: chapman_dp_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_dp_Initialize.o: chapman_dp_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_dp_Function.o: chapman_dp_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_dp_Stochastic.o: chapman_dp_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_dp_Jacobian.o: chapman_dp_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_dp_LinearAlgebra.o: chapman_dp_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_dp_Rates.o: chapman_dp_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_dp_Hessian.o:  chapman_dp_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_dp_Stoichiom.o: chapman_dp_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_dp_Util.o: chapman_dp_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

