# Set here the Fortran77 compiler and the desired optimization options
COMPILER = GNU

FC_INTEL   = ifort
FOPT_INTEL = -O -f77rtl -fp-model=precise -pc80 -prec-div
FC_PGF     = pgf77
FOPT_PGF   = -O -fast -pc 80 -Kieee
FC_GNU     = gfortran
FOPT_GNU   = -O
FC_HPUX    = f90
FOPT_HPUX  = -O

FC   = $(FC_$(COMPILER))
FOPT = $(FOPT_$(COMPILER)) 

# Mathematical libraries: blas and lapack
# MATHLIB   = -L/usr/local/lib  -llapack_g77  -L/usr/lib -lblas_g77
MATHLIB   = -llapack  -lblas 

# To create Matlab mex gateway routines
# Note: use $(FC) as the mex Fortran compiler
MEX  = mex

HEADERS = cbm4_ref_Global.h  cbm4_ref_Parameters.h  cbm4_ref_Sparse.h

#SPSRC = cbm4_ref_JacobianSP.f \
#	cbm4_ref_HessianSP.f  \
#	cbm4_ref_StoichiomSP.f

#SPOBJ = cbm4_ref_JacobianSP.o \
#	cbm4_ref_HessianSP.o  \
#	cbm4_ref_StoichiomSP.o


SRC =   cbm4_ref_Main.f      cbm4_ref_Integrator.f   \
        cbm4_ref_Function.f  cbm4_ref_Initialize.f   \
	cbm4_ref_Jacobian.f  cbm4_ref_LinearAlgebra.f\
	cbm4_ref_Rates.f     cbm4_ref_Hessian.f      \
	cbm4_ref_Stoichiom.f cbm4_ref_Util.f         \
	cbm4_ref_Monitor.f   

OBJ =   cbm4_ref_Main.o      cbm4_ref_Integrator.o   \
        cbm4_ref_Function.o  cbm4_ref_Initialize.o   \
	cbm4_ref_Jacobian.o  cbm4_ref_LinearAlgebra.o\
	cbm4_ref_Rates.o     cbm4_ref_Hessian.o      \
	cbm4_ref_Stoichiom.o cbm4_ref_Util.o         \
	cbm4_ref_Monitor.o

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(FC) $(FOPT) $(SPOBJ) $(OBJ) $(MATHLIB) -o cbm4_ref.exe

#mex:    $(HEADERS) $(SPOBJ) $(OBJ)
#	$(MEX) FC#$(FC) -fortran -O cbm4_ref_mex_Fun.f     $(SPOBJ) $(OBJ)
#	$(MEX) FC#$(FC) -fortran -O cbm4_ref_mex_Jac_SP.f  $(SPOBJ) $(OBJ)
#	$(MEX) FC#$(FC) -fortran -O cbm4_ref_mex_Hessian.f $(SPOBJ) $(OBJ)
	
clean:
	rm -f $(SPOBJ) $(OBJ) cbm4_ref.exe cbm4_ref.map  \
	cbm4_ref.dat 

distclean:
	rm -f $(SPOBJ) $(OBJ) cbm4_ref.exe cbm4_ref.map  \
	cbm4_ref.dat cbm4_ref*.f  cbm4_ref*.h 

cbm4_ref_Monitor.o: cbm4_ref_Monitor.f $(HEADERS)
	$(FC) $(FOPT) -c $<

cbm4_ref_JacobianSP.o: cbm4_ref_JacobianSP.f $(HEADERS)
	$(FC) $(FOPT) -c $<

cbm4_ref_HessianSP.o: cbm4_ref_HessianSP.f  $(HEADERS)
	$(FC) $(FOPT) -c $<

cbm4_ref_StoichiomSP.o: cbm4_ref_StoichiomSP.f $(HEADERS)
	$(FC) $(FOPT) -c $<

cbm4_ref_Main.o: cbm4_ref_Main.f  cbm4_ref_Initialize.o $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

cbm4_ref_Integrator.o: cbm4_ref_Integrator.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

cbm4_ref_Initialize.o: cbm4_ref_Initialize.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

cbm4_ref_Function.o: cbm4_ref_Function.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

cbm4_ref_Jacobian.o: cbm4_ref_Jacobian.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

cbm4_ref_LinearAlgebra.o: cbm4_ref_LinearAlgebra.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

cbm4_ref_Rates.o: cbm4_ref_Rates.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

cbm4_ref_Hessian.o:  cbm4_ref_Hessian.f $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

cbm4_ref_Stoichiom.o: cbm4_ref_Stoichiom.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

cbm4_ref_Util.o: cbm4_ref_Util.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<
