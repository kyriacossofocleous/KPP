# Set here the desired C compiler and its optimization options
CC   = gcc
#COPT = -O2 -m32 -fsingle-precision-constant
#DEBUG
COPT = -O2 -m32 -fsingle-precision-constant -Wfloat-conversion -Wdouble-promotion

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = small_enh_Global.h  small_enh_Parameters.h  small_enh_Sparse.h

SPSRC = small_enh_JacobianSP.c \
	small_enh_HessianSP.c  \
	small_enh_StoichiomSP.c

SPOBJ = small_enh_JacobianSP.o \
	small_enh_HessianSP.o  \
	small_enh_StoichiomSP.o


SRC =   small_enh_Main.c      small_enh_Integrator.c   \
	small_enh_Function.c  small_enh_Initialize.c   \
	small_enh_Jacobian.c  small_enh_LinearAlgebra.c\
	small_enh_Rates.c     small_enh_Hessian.c      \
	small_enh_Stoichiom.c small_enh_Util.c         \
	small_enh_Monitor.c

OBJ =   small_enh_Main.o      small_enh_Integrator.o   \
	small_enh_Function.o  small_enh_Initialize.o   \
	small_enh_Jacobian.o  small_enh_LinearAlgebra.o\
	small_enh_Rates.o     small_enh_Hessian.o      \
	small_enh_Stoichiom.o small_enh_Util.o         \
	small_enh_Monitor.o

STOCHSRC = small_enh_Stochastic.c 
STOCHOBJ = small_enh_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o small_enh.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o small_enh_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O small_enh_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O small_enh_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O small_enh_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) small_enh.exe small_enh_*.mexglx small_enh*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) small_enh.exe small_enh*.dat \
	small_enh_*.c small_enh_*.h small_enh_*.map small_enh_*.mexglx

small_enh_Monitor.o: small_enh_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

small_enh_JacobianSP.o: small_enh_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

small_enh_HessianSP.o: small_enh_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

small_enh_StoichiomSP.o: small_enh_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

small_enh_Main.o: small_enh_Main.c small_enh_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_enh_Integrator.o: small_enh_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_enh_Initialize.o: small_enh_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_enh_Function.o: small_enh_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_enh_Stochastic.o: small_enh_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_enh_Jacobian.o: small_enh_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_enh_LinearAlgebra.o: small_enh_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_enh_Rates.o: small_enh_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_enh_Hessian.o:  small_enh_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_enh_Stoichiom.o: small_enh_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_enh_Util.o: small_enh_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

