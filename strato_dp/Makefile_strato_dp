# Set here the desired C compiler and its optimization options
CC   = gcc
COPT = -O3

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = strato_dp_Global.h  strato_dp_Parameters.h  strato_dp_Sparse.h

SPSRC = strato_dp_JacobianSP.c \
	strato_dp_HessianSP.c  \
	strato_dp_StoichiomSP.c

SPOBJ = strato_dp_JacobianSP.o \
	strato_dp_HessianSP.o  \
	strato_dp_StoichiomSP.o


SRC =   strato_dp_Main.c      strato_dp_Integrator.c   \
	strato_dp_Function.c  strato_dp_Initialize.c   \
	strato_dp_Jacobian.c  strato_dp_LinearAlgebra.c\
	strato_dp_Rates.c     strato_dp_Hessian.c      \
	strato_dp_Stoichiom.c strato_dp_Util.c         \
	strato_dp_Monitor.c

OBJ =   strato_dp_Main.o      strato_dp_Integrator.o   \
	strato_dp_Function.o  strato_dp_Initialize.o   \
	strato_dp_Jacobian.o  strato_dp_LinearAlgebra.o\
	strato_dp_Rates.o     strato_dp_Hessian.o      \
	strato_dp_Stoichiom.o strato_dp_Util.o         \
	strato_dp_Monitor.o

STOCHSRC = strato_dp_Stochastic.c 
STOCHOBJ = strato_dp_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o strato_dp.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o strato_dp_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O strato_dp_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O strato_dp_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O strato_dp_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) strato_dp.exe strato_dp_*.mexglx strato_dp*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) strato_dp.exe strato_dp*.dat \
	strato_dp_*.c strato_dp_*.h strato_dp_*.map strato_dp_*.mexglx

strato_dp_Monitor.o: strato_dp_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

strato_dp_JacobianSP.o: strato_dp_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

strato_dp_HessianSP.o: strato_dp_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

strato_dp_StoichiomSP.o: strato_dp_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

strato_dp_Main.o: strato_dp_Main.c strato_dp_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_dp_Integrator.o: strato_dp_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_dp_Initialize.o: strato_dp_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_dp_Function.o: strato_dp_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_dp_Stochastic.o: strato_dp_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_dp_Jacobian.o: strato_dp_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_dp_LinearAlgebra.o: strato_dp_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_dp_Rates.o: strato_dp_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_dp_Hessian.o:  strato_dp_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_dp_Stoichiom.o: strato_dp_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_dp_Util.o: strato_dp_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

