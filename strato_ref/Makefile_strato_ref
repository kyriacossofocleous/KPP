# Set here the Fortran77 compiler and the desired optimization options
COMPILER = GNU

FC_INTEL   = ifort
FOPT_INTEL = -O -f77rtl -fp-model=precise -pc80 -prec-div
FC_PGF     = pgf77
FOPT_PGF   = -O -fast -pc 80 -Kieee
FC_GNU     = gfortran
FOPT_GNU   = -O
FC_HPUX    = f90
FOPT_HPUX  = -O

FC   = $(FC_$(COMPILER))
FOPT = $(FOPT_$(COMPILER)) 

# Mathematical libraries: blas and lapack
# MATHLIB   = -L/usr/local/lib  -llapack_g77  -L/usr/lib -lblas_g77
MATHLIB   = -llapack  -lblas 

# To create Matlab mex gateway routines
# Note: use $(FC) as the mex Fortran compiler
MEX  = mex

HEADERS = strato_ref_Global.h  strato_ref_Parameters.h  strato_ref_Sparse.h

#SPSRC = strato_ref_JacobianSP.f \
#	strato_ref_HessianSP.f  \
#	strato_ref_StoichiomSP.f

#SPOBJ = strato_ref_JacobianSP.o \
#	strato_ref_HessianSP.o  \
#	strato_ref_StoichiomSP.o


SRC =   strato_ref_Main.f      strato_ref_Integrator.f   \
        strato_ref_Function.f  strato_ref_Initialize.f   \
	strato_ref_Jacobian.f  strato_ref_LinearAlgebra.f\
	strato_ref_Rates.f     strato_ref_Hessian.f      \
	strato_ref_Stoichiom.f strato_ref_Util.f         \
	strato_ref_Monitor.f   

OBJ =   strato_ref_Main.o      strato_ref_Integrator.o   \
        strato_ref_Function.o  strato_ref_Initialize.o   \
	strato_ref_Jacobian.o  strato_ref_LinearAlgebra.o\
	strato_ref_Rates.o     strato_ref_Hessian.o      \
	strato_ref_Stoichiom.o strato_ref_Util.o         \
	strato_ref_Monitor.o

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(FC) $(FOPT) $(SPOBJ) $(OBJ) $(MATHLIB) -o strato_ref.exe

#mex:    $(HEADERS) $(SPOBJ) $(OBJ)
#	$(MEX) FC#$(FC) -fortran -O strato_ref_mex_Fun.f     $(SPOBJ) $(OBJ)
#	$(MEX) FC#$(FC) -fortran -O strato_ref_mex_Jac_SP.f  $(SPOBJ) $(OBJ)
#	$(MEX) FC#$(FC) -fortran -O strato_ref_mex_Hessian.f $(SPOBJ) $(OBJ)
	
clean:
	rm -f $(SPOBJ) $(OBJ) strato_ref.exe strato_ref.map  \
	strato_ref.dat 

distclean:
	rm -f $(SPOBJ) $(OBJ) strato_ref.exe strato_ref.map  \
	strato_ref.dat strato_ref*.f  strato_ref*.h 

strato_ref_Monitor.o: strato_ref_Monitor.f $(HEADERS)
	$(FC) $(FOPT) -c $<

strato_ref_JacobianSP.o: strato_ref_JacobianSP.f $(HEADERS)
	$(FC) $(FOPT) -c $<

strato_ref_HessianSP.o: strato_ref_HessianSP.f  $(HEADERS)
	$(FC) $(FOPT) -c $<

strato_ref_StoichiomSP.o: strato_ref_StoichiomSP.f $(HEADERS)
	$(FC) $(FOPT) -c $<

strato_ref_Main.o: strato_ref_Main.f  strato_ref_Initialize.o $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

strato_ref_Integrator.o: strato_ref_Integrator.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

strato_ref_Initialize.o: strato_ref_Initialize.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

strato_ref_Function.o: strato_ref_Function.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

strato_ref_Jacobian.o: strato_ref_Jacobian.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

strato_ref_LinearAlgebra.o: strato_ref_LinearAlgebra.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

strato_ref_Rates.o: strato_ref_Rates.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

strato_ref_Hessian.o:  strato_ref_Hessian.f $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

strato_ref_Stoichiom.o: strato_ref_Stoichiom.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

strato_ref_Util.o: strato_ref_Util.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<
