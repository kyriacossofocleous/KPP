# Set here the desired C compiler and its optimization options
CC   = icc
COPT = -O2 -fp-model=precise  

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = saprc_single_Global.h  saprc_single_Parameters.h  saprc_single_Sparse.h

SPSRC = saprc_single_JacobianSP.c \
	saprc_single_HessianSP.c  \
	saprc_single_StoichiomSP.c

SPOBJ = saprc_single_JacobianSP.o \
	saprc_single_HessianSP.o  \
	saprc_single_StoichiomSP.o


SRC =   saprc_single_Main.c      saprc_single_Integrator.c   \
	saprc_single_Function.c  saprc_single_Initialize.c   \
	saprc_single_Jacobian.c  saprc_single_LinearAlgebra.c\
	saprc_single_Rates.c     saprc_single_Hessian.c      \
	saprc_single_Stoichiom.c saprc_single_Util.c         \
	saprc_single_Monitor.c

OBJ =   saprc_single_Main.o      saprc_single_Integrator.o   \
	saprc_single_Function.o  saprc_single_Initialize.o   \
	saprc_single_Jacobian.o  saprc_single_LinearAlgebra.o\
	saprc_single_Rates.o     saprc_single_Hessian.o      \
	saprc_single_Stoichiom.o saprc_single_Util.o         \
	saprc_single_Monitor.o

STOCHSRC = saprc_single_Stochastic.c 
STOCHOBJ = saprc_single_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o saprc_single.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o saprc_single_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O saprc_single_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O saprc_single_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O saprc_single_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) saprc_single.exe saprc_single_*.mexglx saprc_single*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) saprc_single.exe saprc_single*.dat \
	saprc_single_*.c saprc_single_*.h saprc_single_*.map saprc_single_*.mexglx

saprc_single_Monitor.o: saprc_single_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

saprc_single_JacobianSP.o: saprc_single_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

saprc_single_HessianSP.o: saprc_single_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

saprc_single_StoichiomSP.o: saprc_single_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

saprc_single_Main.o: saprc_single_Main.c saprc_single_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_single_Integrator.o: saprc_single_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_single_Initialize.o: saprc_single_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_single_Function.o: saprc_single_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_single_Stochastic.o: saprc_single_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_single_Jacobian.o: saprc_single_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_single_LinearAlgebra.o: saprc_single_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_single_Rates.o: saprc_single_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_single_Hessian.o:  saprc_single_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_single_Stoichiom.o: saprc_single_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_single_Util.o: saprc_single_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

