# Set here the desired C compiler and its optimization options
CC   = gcc
COPT = -O3

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = chapman_sp_Global.h  chapman_sp_Parameters.h  chapman_sp_Sparse.h

SPSRC = chapman_sp_JacobianSP.c \
	chapman_sp_HessianSP.c  \
	chapman_sp_StoichiomSP.c

SPOBJ = chapman_sp_JacobianSP.o \
	chapman_sp_HessianSP.o  \
	chapman_sp_StoichiomSP.o


SRC =   chapman_sp_Main.c      chapman_sp_Integrator.c   \
	chapman_sp_Function.c  chapman_sp_Initialize.c   \
	chapman_sp_Jacobian.c  chapman_sp_LinearAlgebra.c\
	chapman_sp_Rates.c     chapman_sp_Hessian.c      \
	chapman_sp_Stoichiom.c chapman_sp_Util.c         \
	chapman_sp_Monitor.c

OBJ =   chapman_sp_Main.o      chapman_sp_Integrator.o   \
	chapman_sp_Function.o  chapman_sp_Initialize.o   \
	chapman_sp_Jacobian.o  chapman_sp_LinearAlgebra.o\
	chapman_sp_Rates.o     chapman_sp_Hessian.o      \
	chapman_sp_Stoichiom.o chapman_sp_Util.o         \
	chapman_sp_Monitor.o

STOCHSRC = chapman_sp_Stochastic.c 
STOCHOBJ = chapman_sp_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o chapman_sp.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o chapman_sp_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O chapman_sp_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O chapman_sp_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O chapman_sp_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) chapman_sp.exe chapman_sp_*.mexglx chapman_sp*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) chapman_sp.exe chapman_sp*.dat \
	chapman_sp_*.c chapman_sp_*.h chapman_sp_*.map chapman_sp_*.mexglx

chapman_sp_Monitor.o: chapman_sp_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_sp_JacobianSP.o: chapman_sp_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_sp_HessianSP.o: chapman_sp_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_sp_StoichiomSP.o: chapman_sp_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_sp_Main.o: chapman_sp_Main.c chapman_sp_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_sp_Integrator.o: chapman_sp_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_sp_Initialize.o: chapman_sp_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_sp_Function.o: chapman_sp_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_sp_Stochastic.o: chapman_sp_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_sp_Jacobian.o: chapman_sp_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_sp_LinearAlgebra.o: chapman_sp_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_sp_Rates.o: chapman_sp_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_sp_Hessian.o:  chapman_sp_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_sp_Stoichiom.o: chapman_sp_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_sp_Util.o: chapman_sp_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

