# Set here the Fortran77 compiler and the desired optimization options
COMPILER = INTEL

FC_INTEL   = ifort
FOPT_INTEL = -O -f77rtl -fp-model=precise -pc80 -prec-div
FC_PGF     = pgf77
FOPT_PGF   = -O -fast -pc 80 -Kieee
FC_GNU     = g77
FOPT_GNU   = -O -Wall -Wimplicit -ffast-math -funroll-loops \
	         -malign-double -ffortran-bounds-check
FC_HPUX    = f90
FOPT_HPUX  = -O

FC   = $(FC_$(COMPILER))
FOPT = $(FOPT_$(COMPILER)) 

# Mathematical libraries: blas and lapack
# MATHLIB   = -L/usr/local/lib  -llapack_g77  -L/usr/lib -lblas_g77
MATHLIB   = -llapack  -lblas 

# To create Matlab mex gateway routines
# Note: use $(FC) as the mex Fortran compiler
MEX  = mex

HEADERS = saprc_ref_Global.h  saprc_ref_Parameters.h  saprc_ref_Sparse.h

#SPSRC = saprc_ref_JacobianSP.f \
#	saprc_ref_HessianSP.f  \
#	saprc_ref_StoichiomSP.f

#SPOBJ = saprc_ref_JacobianSP.o \
#	saprc_ref_HessianSP.o  \
#	saprc_ref_StoichiomSP.o


SRC =   saprc_ref_Main.f      saprc_ref_Integrator.f   \
        saprc_ref_Function.f  saprc_ref_Initialize.f   \
	saprc_ref_Jacobian.f  saprc_ref_LinearAlgebra.f\
	saprc_ref_Rates.f     saprc_ref_Hessian.f      \
	saprc_ref_Stoichiom.f saprc_ref_Util.f         \
	saprc_ref_Monitor.f   

OBJ =   saprc_ref_Main.o      saprc_ref_Integrator.o   \
        saprc_ref_Function.o  saprc_ref_Initialize.o   \
	saprc_ref_Jacobian.o  saprc_ref_LinearAlgebra.o\
	saprc_ref_Rates.o     saprc_ref_Hessian.o      \
	saprc_ref_Stoichiom.o saprc_ref_Util.o         \
	saprc_ref_Monitor.o

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(FC) $(FOPT) $(SPOBJ) $(OBJ) $(MATHLIB) -o saprc_ref.exe

#mex:    $(HEADERS) $(SPOBJ) $(OBJ)
#	$(MEX) FC#$(FC) -fortran -O saprc_ref_mex_Fun.f     $(SPOBJ) $(OBJ)
#	$(MEX) FC#$(FC) -fortran -O saprc_ref_mex_Jac_SP.f  $(SPOBJ) $(OBJ)
#	$(MEX) FC#$(FC) -fortran -O saprc_ref_mex_Hessian.f $(SPOBJ) $(OBJ)
	
clean:
	rm -f $(SPOBJ) $(OBJ) saprc_ref.exe saprc_ref.map  \
	saprc_ref.dat 

distclean:
	rm -f $(SPOBJ) $(OBJ) saprc_ref.exe saprc_ref.map  \
	saprc_ref.dat saprc_ref*.f  saprc_ref*.h 

saprc_ref_Monitor.o: saprc_ref_Monitor.f $(HEADERS)
	$(FC) $(FOPT) -c $<

saprc_ref_JacobianSP.o: saprc_ref_JacobianSP.f $(HEADERS)
	$(FC) $(FOPT) -c $<

saprc_ref_HessianSP.o: saprc_ref_HessianSP.f  $(HEADERS)
	$(FC) $(FOPT) -c $<

saprc_ref_StoichiomSP.o: saprc_ref_StoichiomSP.f $(HEADERS)
	$(FC) $(FOPT) -c $<

saprc_ref_Main.o: saprc_ref_Main.f  saprc_ref_Initialize.o $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

saprc_ref_Integrator.o: saprc_ref_Integrator.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

saprc_ref_Initialize.o: saprc_ref_Initialize.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

saprc_ref_Function.o: saprc_ref_Function.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

saprc_ref_Jacobian.o: saprc_ref_Jacobian.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

saprc_ref_LinearAlgebra.o: saprc_ref_LinearAlgebra.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

saprc_ref_Rates.o: saprc_ref_Rates.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

saprc_ref_Hessian.o:  saprc_ref_Hessian.f $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

saprc_ref_Stoichiom.o: saprc_ref_Stoichiom.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

saprc_ref_Util.o: saprc_ref_Util.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

