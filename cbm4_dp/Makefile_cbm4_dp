# Set here the desired C compiler and its optimization options
CC   = gcc
COPT = -O3

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = cbm4_dp_Global.h  cbm4_dp_Parameters.h  cbm4_dp_Sparse.h

SPSRC = cbm4_dp_JacobianSP.c \
	cbm4_dp_HessianSP.c  \
	cbm4_dp_StoichiomSP.c

SPOBJ = cbm4_dp_JacobianSP.o \
	cbm4_dp_HessianSP.o  \
	cbm4_dp_StoichiomSP.o


SRC =   cbm4_dp_Main.c      cbm4_dp_Integrator.c   \
	cbm4_dp_Function.c  cbm4_dp_Initialize.c   \
	cbm4_dp_Jacobian.c  cbm4_dp_LinearAlgebra.c\
	cbm4_dp_Rates.c     cbm4_dp_Hessian.c      \
	cbm4_dp_Stoichiom.c cbm4_dp_Util.c         \
	cbm4_dp_Monitor.c

OBJ =   cbm4_dp_Main.o      cbm4_dp_Integrator.o   \
	cbm4_dp_Function.o  cbm4_dp_Initialize.o   \
	cbm4_dp_Jacobian.o  cbm4_dp_LinearAlgebra.o\
	cbm4_dp_Rates.o     cbm4_dp_Hessian.o      \
	cbm4_dp_Stoichiom.o cbm4_dp_Util.o         \
	cbm4_dp_Monitor.o

STOCHSRC = cbm4_dp_Stochastic.c 
STOCHOBJ = cbm4_dp_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o cbm4_dp.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o cbm4_dp_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O cbm4_dp_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O cbm4_dp_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O cbm4_dp_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) cbm4_dp.exe cbm4_dp_*.mexglx cbm4_dp*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) cbm4_dp.exe cbm4_dp*.dat \
	cbm4_dp_*.c cbm4_dp_*.h cbm4_dp_*.map cbm4_dp_*.mexglx

cbm4_dp_Monitor.o: cbm4_dp_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

cbm4_dp_JacobianSP.o: cbm4_dp_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

cbm4_dp_HessianSP.o: cbm4_dp_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

cbm4_dp_StoichiomSP.o: cbm4_dp_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

cbm4_dp_Main.o: cbm4_dp_Main.c cbm4_dp_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_dp_Integrator.o: cbm4_dp_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_dp_Initialize.o: cbm4_dp_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_dp_Function.o: cbm4_dp_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_dp_Stochastic.o: cbm4_dp_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_dp_Jacobian.o: cbm4_dp_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_dp_LinearAlgebra.o: cbm4_dp_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_dp_Rates.o: cbm4_dp_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_dp_Hessian.o:  cbm4_dp_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_dp_Stoichiom.o: cbm4_dp_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_dp_Util.o: cbm4_dp_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

