# Set here the desired C compiler and its optimization options
CC   = gcc
COPT = -O3

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = smog_dp_Global.h  smog_dp_Parameters.h  smog_dp_Sparse.h

SPSRC = smog_dp_JacobianSP.c \
	smog_dp_HessianSP.c  \
	smog_dp_StoichiomSP.c

SPOBJ = smog_dp_JacobianSP.o \
	smog_dp_HessianSP.o  \
	smog_dp_StoichiomSP.o


SRC =   smog_dp_Main.c      smog_dp_Integrator.c   \
	smog_dp_Function.c  smog_dp_Initialize.c   \
	smog_dp_Jacobian.c  smog_dp_LinearAlgebra.c\
	smog_dp_Rates.c     smog_dp_Hessian.c      \
	smog_dp_Stoichiom.c smog_dp_Util.c         \
	smog_dp_Monitor.c

OBJ =   smog_dp_Main.o      smog_dp_Integrator.o   \
	smog_dp_Function.o  smog_dp_Initialize.o   \
	smog_dp_Jacobian.o  smog_dp_LinearAlgebra.o\
	smog_dp_Rates.o     smog_dp_Hessian.o      \
	smog_dp_Stoichiom.o smog_dp_Util.o         \
	smog_dp_Monitor.o

STOCHSRC = smog_dp_Stochastic.c 
STOCHOBJ = smog_dp_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o smog_dp.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o smog_dp_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O smog_dp_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O smog_dp_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O smog_dp_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) smog_dp.exe smog_dp_*.mexglx smog_dp*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) smog_dp.exe smog_dp*.dat \
	smog_dp_*.c smog_dp_*.h smog_dp_*.map smog_dp_*.mexglx

smog_dp_Monitor.o: smog_dp_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

smog_dp_JacobianSP.o: smog_dp_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

smog_dp_HessianSP.o: smog_dp_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

smog_dp_StoichiomSP.o: smog_dp_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

smog_dp_Main.o: smog_dp_Main.c smog_dp_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_dp_Integrator.o: smog_dp_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_dp_Initialize.o: smog_dp_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_dp_Function.o: smog_dp_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_dp_Stochastic.o: smog_dp_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_dp_Jacobian.o: smog_dp_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_dp_LinearAlgebra.o: smog_dp_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_dp_Rates.o: smog_dp_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_dp_Hessian.o:  smog_dp_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_dp_Stoichiom.o: smog_dp_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_dp_Util.o: smog_dp_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

