# Set here the desired C compiler and its optimization options
CC   = gcc
COPT = -O -Wall  

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = smog_single_Global.h  smog_single_Parameters.h  smog_single_Sparse.h

SPSRC = smog_single_JacobianSP.c \
	smog_single_HessianSP.c  \
	smog_single_StoichiomSP.c

SPOBJ = smog_single_JacobianSP.o \
	smog_single_HessianSP.o  \
	smog_single_StoichiomSP.o


SRC =   smog_single_Main.c      smog_single_Integrator.c   \
	smog_single_Function.c  smog_single_Initialize.c   \
	smog_single_Jacobian.c  smog_single_LinearAlgebra.c\
	smog_single_Rates.c     smog_single_Hessian.c      \
	smog_single_Stoichiom.c smog_single_Util.c         \
	smog_single_Monitor.c

OBJ =   smog_single_Main.o      smog_single_Integrator.o   \
	smog_single_Function.o  smog_single_Initialize.o   \
	smog_single_Jacobian.o  smog_single_LinearAlgebra.o\
	smog_single_Rates.o     smog_single_Hessian.o      \
	smog_single_Stoichiom.o smog_single_Util.o         \
	smog_single_Monitor.o

STOCHSRC = smog_single_Stochastic.c 
STOCHOBJ = smog_single_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o smog_single.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o smog_single_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O smog_single_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O smog_single_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O smog_single_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) smog_single.exe smog_single_*.mexglx smog_single*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) smog_single.exe smog_single*.dat \
	smog_single_*.c smog_single_*.h smog_single_*.map smog_single_*.mexglx

smog_single_Monitor.o: smog_single_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

smog_single_JacobianSP.o: smog_single_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

smog_single_HessianSP.o: smog_single_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

smog_single_StoichiomSP.o: smog_single_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

smog_single_Main.o: smog_single_Main.c smog_single_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_single_Integrator.o: smog_single_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_single_Initialize.o: smog_single_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_single_Function.o: smog_single_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_single_Stochastic.o: smog_single_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_single_Jacobian.o: smog_single_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_single_LinearAlgebra.o: smog_single_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_single_Rates.o: smog_single_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_single_Hessian.o:  smog_single_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_single_Stoichiom.o: smog_single_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_single_Util.o: smog_single_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

