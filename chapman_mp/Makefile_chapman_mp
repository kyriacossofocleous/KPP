# Set here the desired C compiler and its optimization options
CC   = gcc
COPT = -O3

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = chapman_mp_Global.h  chapman_mp_Parameters.h  chapman_mp_Sparse.h

SPSRC = chapman_mp_JacobianSP.c \
	chapman_mp_HessianSP.c  \
	chapman_mp_StoichiomSP.c

SPOBJ = chapman_mp_JacobianSP.o \
	chapman_mp_HessianSP.o  \
	chapman_mp_StoichiomSP.o


SRC =   chapman_mp_Main.c      chapman_mp_Integrator.c   \
	chapman_mp_Function.c  chapman_mp_Initialize.c   \
	chapman_mp_Jacobian.c  chapman_mp_LinearAlgebra.c\
	chapman_mp_Rates.c     chapman_mp_Hessian.c      \
	chapman_mp_Stoichiom.c chapman_mp_Util.c         \
	chapman_mp_Monitor.c

OBJ =   chapman_mp_Main.o      chapman_mp_Integrator.o   \
	chapman_mp_Function.o  chapman_mp_Initialize.o   \
	chapman_mp_Jacobian.o  chapman_mp_LinearAlgebra.o\
	chapman_mp_Rates.o     chapman_mp_Hessian.o      \
	chapman_mp_Stoichiom.o chapman_mp_Util.o         \
	chapman_mp_Monitor.o

STOCHSRC = chapman_mp_Stochastic.c 
STOCHOBJ = chapman_mp_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o chapman_mp.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o chapman_mp_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O chapman_mp_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O chapman_mp_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O chapman_mp_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) chapman_mp.exe chapman_mp_*.mexglx chapman_mp*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) chapman_mp.exe chapman_mp*.dat \
	chapman_mp_*.c chapman_mp_*.h chapman_mp_*.map chapman_mp_*.mexglx

chapman_mp_Monitor.o: chapman_mp_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_mp_JacobianSP.o: chapman_mp_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_mp_HessianSP.o: chapman_mp_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_mp_StoichiomSP.o: chapman_mp_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_mp_Main.o: chapman_mp_Main.c chapman_mp_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_mp_Integrator.o: chapman_mp_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_mp_Initialize.o: chapman_mp_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_mp_Function.o: chapman_mp_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_mp_Stochastic.o: chapman_mp_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_mp_Jacobian.o: chapman_mp_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_mp_LinearAlgebra.o: chapman_mp_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_mp_Rates.o: chapman_mp_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_mp_Hessian.o:  chapman_mp_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_mp_Stoichiom.o: chapman_mp_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_mp_Util.o: chapman_mp_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

