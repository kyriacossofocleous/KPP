# Set here the desired C compiler and its optimization options
CC   = icc
#COPT = -O2 -m32 -fsingle-precision-constant
#DEBUG
COPT = -O3 -fp-model=precise

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = saprc_enh_Global.h  saprc_enh_Parameters.h  saprc_enh_Sparse.h

SPSRC = saprc_enh_JacobianSP.c \
	saprc_enh_HessianSP.c  \
	saprc_enh_StoichiomSP.c

SPOBJ = saprc_enh_JacobianSP.o \
	saprc_enh_HessianSP.o  \
	saprc_enh_StoichiomSP.o


SRC =   saprc_enh_Main.c      saprc_enh_Integrator.c   \
	saprc_enh_Function.c  saprc_enh_Initialize.c   \
	saprc_enh_Jacobian.c  saprc_enh_LinearAlgebra.c\
	saprc_enh_Rates.c     saprc_enh_Hessian.c      \
	saprc_enh_Stoichiom.c saprc_enh_Util.c         \
	saprc_enh_Monitor.c

OBJ =   saprc_enh_Main.o      saprc_enh_Integrator.o   \
	saprc_enh_Function.o  saprc_enh_Initialize.o   \
	saprc_enh_Jacobian.o  saprc_enh_LinearAlgebra.o\
	saprc_enh_Rates.o     saprc_enh_Hessian.o      \
	saprc_enh_Stoichiom.o saprc_enh_Util.o         \
	saprc_enh_Monitor.o

STOCHSRC = saprc_enh_Stochastic.c 
STOCHOBJ = saprc_enh_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o saprc_enh.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o saprc_enh_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O saprc_enh_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O saprc_enh_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O saprc_enh_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) saprc_enh.exe saprc_enh_*.mexglx saprc_enh*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) saprc_enh.exe saprc_enh*.dat \
	saprc_enh_*.c saprc_enh_*.h saprc_enh_*.map saprc_enh_*.mexglx

saprc_enh_Monitor.o: saprc_enh_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

saprc_enh_JacobianSP.o: saprc_enh_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

saprc_enh_HessianSP.o: saprc_enh_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

saprc_enh_StoichiomSP.o: saprc_enh_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

saprc_enh_Main.o: saprc_enh_Main.c saprc_enh_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_enh_Integrator.o: saprc_enh_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_enh_Initialize.o: saprc_enh_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_enh_Function.o: saprc_enh_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_enh_Stochastic.o: saprc_enh_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_enh_Jacobian.o: saprc_enh_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_enh_LinearAlgebra.o: saprc_enh_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_enh_Rates.o: saprc_enh_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_enh_Hessian.o:  saprc_enh_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_enh_Stoichiom.o: saprc_enh_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_enh_Util.o: saprc_enh_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

