# Set here the desired C compiler and its optimization options
CC   = gcc
COPT = -O3

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = smog_mp_Global.h  smog_mp_Parameters.h  smog_mp_Sparse.h

SPSRC = smog_mp_JacobianSP.c \
	smog_mp_HessianSP.c  \
	smog_mp_StoichiomSP.c

SPOBJ = smog_mp_JacobianSP.o \
	smog_mp_HessianSP.o  \
	smog_mp_StoichiomSP.o


SRC =   smog_mp_Main.c      smog_mp_Integrator.c   \
	smog_mp_Function.c  smog_mp_Initialize.c   \
	smog_mp_Jacobian.c  smog_mp_LinearAlgebra.c\
	smog_mp_Rates.c     smog_mp_Hessian.c      \
	smog_mp_Stoichiom.c smog_mp_Util.c         \
	smog_mp_Monitor.c

OBJ =   smog_mp_Main.o      smog_mp_Integrator.o   \
	smog_mp_Function.o  smog_mp_Initialize.o   \
	smog_mp_Jacobian.o  smog_mp_LinearAlgebra.o\
	smog_mp_Rates.o     smog_mp_Hessian.o      \
	smog_mp_Stoichiom.o smog_mp_Util.o         \
	smog_mp_Monitor.o

STOCHSRC = smog_mp_Stochastic.c 
STOCHOBJ = smog_mp_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o smog_mp.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o smog_mp_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O smog_mp_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O smog_mp_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O smog_mp_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) smog_mp.exe smog_mp_*.mexglx smog_mp*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) smog_mp.exe smog_mp*.dat \
	smog_mp_*.c smog_mp_*.h smog_mp_*.map smog_mp_*.mexglx

smog_mp_Monitor.o: smog_mp_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

smog_mp_JacobianSP.o: smog_mp_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

smog_mp_HessianSP.o: smog_mp_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

smog_mp_StoichiomSP.o: smog_mp_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

smog_mp_Main.o: smog_mp_Main.c smog_mp_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_mp_Integrator.o: smog_mp_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_mp_Initialize.o: smog_mp_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_mp_Function.o: smog_mp_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_mp_Stochastic.o: smog_mp_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_mp_Jacobian.o: smog_mp_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_mp_LinearAlgebra.o: smog_mp_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_mp_Rates.o: smog_mp_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_mp_Hessian.o:  smog_mp_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_mp_Stoichiom.o: smog_mp_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_mp_Util.o: smog_mp_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

