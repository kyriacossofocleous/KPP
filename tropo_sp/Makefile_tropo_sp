# Set here the desired C compiler and its optimization options
CC   = gcc
COPT = -O3

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = tropo_sp_Global.h  tropo_sp_Parameters.h  tropo_sp_Sparse.h

SPSRC = tropo_sp_JacobianSP.c \
	tropo_sp_HessianSP.c  \
	tropo_sp_StoichiomSP.c

SPOBJ = tropo_sp_JacobianSP.o \
	tropo_sp_HessianSP.o  \
	tropo_sp_StoichiomSP.o


SRC =   tropo_sp_Main.c      tropo_sp_Integrator.c   \
	tropo_sp_Function.c  tropo_sp_Initialize.c   \
	tropo_sp_Jacobian.c  tropo_sp_LinearAlgebra.c\
	tropo_sp_Rates.c     tropo_sp_Hessian.c      \
	tropo_sp_Stoichiom.c tropo_sp_Util.c         \
	tropo_sp_Monitor.c

OBJ =   tropo_sp_Main.o      tropo_sp_Integrator.o   \
	tropo_sp_Function.o  tropo_sp_Initialize.o   \
	tropo_sp_Jacobian.o  tropo_sp_LinearAlgebra.o\
	tropo_sp_Rates.o     tropo_sp_Hessian.o      \
	tropo_sp_Stoichiom.o tropo_sp_Util.o         \
	tropo_sp_Monitor.o

STOCHSRC = tropo_sp_Stochastic.c 
STOCHOBJ = tropo_sp_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o tropo_sp.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o tropo_sp_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O tropo_sp_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O tropo_sp_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O tropo_sp_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) tropo_sp.exe tropo_sp_*.mexglx tropo_sp*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) tropo_sp.exe tropo_sp*.dat \
	tropo_sp_*.c tropo_sp_*.h tropo_sp_*.map tropo_sp_*.mexglx

tropo_sp_Monitor.o: tropo_sp_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

tropo_sp_JacobianSP.o: tropo_sp_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

tropo_sp_HessianSP.o: tropo_sp_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

tropo_sp_StoichiomSP.o: tropo_sp_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

tropo_sp_Main.o: tropo_sp_Main.c tropo_sp_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_sp_Integrator.o: tropo_sp_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_sp_Initialize.o: tropo_sp_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_sp_Function.o: tropo_sp_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_sp_Stochastic.o: tropo_sp_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_sp_Jacobian.o: tropo_sp_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_sp_LinearAlgebra.o: tropo_sp_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_sp_Rates.o: tropo_sp_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_sp_Hessian.o:  tropo_sp_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_sp_Stoichiom.o: tropo_sp_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_sp_Util.o: tropo_sp_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

