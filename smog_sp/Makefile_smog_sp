# Set here the desired C compiler and its optimization options
CC   = gcc
COPT = -O3

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = smog_sp_Global.h  smog_sp_Parameters.h  smog_sp_Sparse.h

SPSRC = smog_sp_JacobianSP.c \
	smog_sp_HessianSP.c  \
	smog_sp_StoichiomSP.c

SPOBJ = smog_sp_JacobianSP.o \
	smog_sp_HessianSP.o  \
	smog_sp_StoichiomSP.o


SRC =   smog_sp_Main.c      smog_sp_Integrator.c   \
	smog_sp_Function.c  smog_sp_Initialize.c   \
	smog_sp_Jacobian.c  smog_sp_LinearAlgebra.c\
	smog_sp_Rates.c     smog_sp_Hessian.c      \
	smog_sp_Stoichiom.c smog_sp_Util.c         \
	smog_sp_Monitor.c

OBJ =   smog_sp_Main.o      smog_sp_Integrator.o   \
	smog_sp_Function.o  smog_sp_Initialize.o   \
	smog_sp_Jacobian.o  smog_sp_LinearAlgebra.o\
	smog_sp_Rates.o     smog_sp_Hessian.o      \
	smog_sp_Stoichiom.o smog_sp_Util.o         \
	smog_sp_Monitor.o

STOCHSRC = smog_sp_Stochastic.c 
STOCHOBJ = smog_sp_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o smog_sp.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o smog_sp_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O smog_sp_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O smog_sp_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O smog_sp_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) smog_sp.exe smog_sp_*.mexglx smog_sp*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) smog_sp.exe smog_sp*.dat \
	smog_sp_*.c smog_sp_*.h smog_sp_*.map smog_sp_*.mexglx

smog_sp_Monitor.o: smog_sp_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

smog_sp_JacobianSP.o: smog_sp_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

smog_sp_HessianSP.o: smog_sp_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

smog_sp_StoichiomSP.o: smog_sp_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

smog_sp_Main.o: smog_sp_Main.c smog_sp_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_sp_Integrator.o: smog_sp_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_sp_Initialize.o: smog_sp_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_sp_Function.o: smog_sp_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_sp_Stochastic.o: smog_sp_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_sp_Jacobian.o: smog_sp_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_sp_LinearAlgebra.o: smog_sp_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_sp_Rates.o: smog_sp_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_sp_Hessian.o:  smog_sp_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_sp_Stoichiom.o: smog_sp_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

smog_sp_Util.o: smog_sp_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

