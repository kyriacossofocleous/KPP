# Set here the desired C compiler and its optimization options
CC   = gcc
COPT = -O3

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = saprc_sp_Global.h  saprc_sp_Parameters.h  saprc_sp_Sparse.h

SPSRC = saprc_sp_JacobianSP.c \
	saprc_sp_HessianSP.c  \
	saprc_sp_StoichiomSP.c

SPOBJ = saprc_sp_JacobianSP.o \
	saprc_sp_HessianSP.o  \
	saprc_sp_StoichiomSP.o


SRC =   saprc_sp_Main.c      saprc_sp_Integrator.c   \
	saprc_sp_Function.c  saprc_sp_Initialize.c   \
	saprc_sp_Jacobian.c  saprc_sp_LinearAlgebra.c\
	saprc_sp_Rates.c     saprc_sp_Hessian.c      \
	saprc_sp_Stoichiom.c saprc_sp_Util.c         \
	saprc_sp_Monitor.c

OBJ =   saprc_sp_Main.o      saprc_sp_Integrator.o   \
	saprc_sp_Function.o  saprc_sp_Initialize.o   \
	saprc_sp_Jacobian.o  saprc_sp_LinearAlgebra.o\
	saprc_sp_Rates.o     saprc_sp_Hessian.o      \
	saprc_sp_Stoichiom.o saprc_sp_Util.o         \
	saprc_sp_Monitor.o

STOCHSRC = saprc_sp_Stochastic.c 
STOCHOBJ = saprc_sp_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o saprc_sp.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o saprc_sp_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O saprc_sp_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O saprc_sp_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O saprc_sp_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) saprc_sp.exe saprc_sp_*.mexglx saprc_sp*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) saprc_sp.exe saprc_sp*.dat \
	saprc_sp_*.c saprc_sp_*.h saprc_sp_*.map saprc_sp_*.mexglx

saprc_sp_Monitor.o: saprc_sp_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

saprc_sp_JacobianSP.o: saprc_sp_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

saprc_sp_HessianSP.o: saprc_sp_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

saprc_sp_StoichiomSP.o: saprc_sp_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

saprc_sp_Main.o: saprc_sp_Main.c saprc_sp_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_sp_Integrator.o: saprc_sp_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_sp_Initialize.o: saprc_sp_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_sp_Function.o: saprc_sp_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_sp_Stochastic.o: saprc_sp_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_sp_Jacobian.o: saprc_sp_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_sp_LinearAlgebra.o: saprc_sp_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_sp_Rates.o: saprc_sp_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_sp_Hessian.o:  saprc_sp_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_sp_Stoichiom.o: saprc_sp_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

saprc_sp_Util.o: saprc_sp_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

