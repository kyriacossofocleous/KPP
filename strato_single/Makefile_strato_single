# Set here the desired C compiler and its optimization options
CC   = icc
COPT = -O2 -fp-model=precise  

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = strato_single_Global.h  strato_single_Parameters.h  strato_single_Sparse.h

SPSRC = strato_single_JacobianSP.c \
	strato_single_HessianSP.c  \
	strato_single_StoichiomSP.c

SPOBJ = strato_single_JacobianSP.o \
	strato_single_HessianSP.o  \
	strato_single_StoichiomSP.o


SRC =   strato_single_Main.c      strato_single_Integrator.c   \
	strato_single_Function.c  strato_single_Initialize.c   \
	strato_single_Jacobian.c  strato_single_LinearAlgebra.c\
	strato_single_Rates.c     strato_single_Hessian.c      \
	strato_single_Stoichiom.c strato_single_Util.c         \
	strato_single_Monitor.c

OBJ =   strato_single_Main.o      strato_single_Integrator.o   \
	strato_single_Function.o  strato_single_Initialize.o   \
	strato_single_Jacobian.o  strato_single_LinearAlgebra.o\
	strato_single_Rates.o     strato_single_Hessian.o      \
	strato_single_Stoichiom.o strato_single_Util.o         \
	strato_single_Monitor.o

STOCHSRC = strato_single_Stochastic.c 
STOCHOBJ = strato_single_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o strato_single.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o strato_single_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O strato_single_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O strato_single_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O strato_single_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) strato_single.exe strato_single_*.mexglx strato_single*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) strato_single.exe strato_single*.dat \
	strato_single_*.c strato_single_*.h strato_single_*.map strato_single_*.mexglx

strato_single_Monitor.o: strato_single_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

strato_single_JacobianSP.o: strato_single_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

strato_single_HessianSP.o: strato_single_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

strato_single_StoichiomSP.o: strato_single_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

strato_single_Main.o: strato_single_Main.c strato_single_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_single_Integrator.o: strato_single_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_single_Initialize.o: strato_single_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_single_Function.o: strato_single_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_single_Stochastic.o: strato_single_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_single_Jacobian.o: strato_single_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_single_LinearAlgebra.o: strato_single_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_single_Rates.o: strato_single_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_single_Hessian.o:  strato_single_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_single_Stoichiom.o: strato_single_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_single_Util.o: strato_single_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

