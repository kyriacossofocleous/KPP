# Set here the desired C compiler and its optimization options
CC   = gcc
COPT = -O3

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = tropo_mp_Global.h  tropo_mp_Parameters.h  tropo_mp_Sparse.h

SPSRC = tropo_mp_JacobianSP.c \
	tropo_mp_HessianSP.c  \
	tropo_mp_StoichiomSP.c

SPOBJ = tropo_mp_JacobianSP.o \
	tropo_mp_HessianSP.o  \
	tropo_mp_StoichiomSP.o


SRC =   tropo_mp_Main.c      tropo_mp_Integrator.c   \
	tropo_mp_Function.c  tropo_mp_Initialize.c   \
	tropo_mp_Jacobian.c  tropo_mp_LinearAlgebra.c\
	tropo_mp_Rates.c     tropo_mp_Hessian.c      \
	tropo_mp_Stoichiom.c tropo_mp_Util.c         \
	tropo_mp_Monitor.c

OBJ =   tropo_mp_Main.o      tropo_mp_Integrator.o   \
	tropo_mp_Function.o  tropo_mp_Initialize.o   \
	tropo_mp_Jacobian.o  tropo_mp_LinearAlgebra.o\
	tropo_mp_Rates.o     tropo_mp_Hessian.o      \
	tropo_mp_Stoichiom.o tropo_mp_Util.o         \
	tropo_mp_Monitor.o

STOCHSRC = tropo_mp_Stochastic.c 
STOCHOBJ = tropo_mp_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o tropo_mp.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o tropo_mp_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O tropo_mp_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O tropo_mp_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O tropo_mp_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) tropo_mp.exe tropo_mp_*.mexglx tropo_mp*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) tropo_mp.exe tropo_mp*.dat \
	tropo_mp_*.c tropo_mp_*.h tropo_mp_*.map tropo_mp_*.mexglx

tropo_mp_Monitor.o: tropo_mp_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

tropo_mp_JacobianSP.o: tropo_mp_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

tropo_mp_HessianSP.o: tropo_mp_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

tropo_mp_StoichiomSP.o: tropo_mp_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

tropo_mp_Main.o: tropo_mp_Main.c tropo_mp_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_mp_Integrator.o: tropo_mp_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_mp_Initialize.o: tropo_mp_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_mp_Function.o: tropo_mp_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_mp_Stochastic.o: tropo_mp_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_mp_Jacobian.o: tropo_mp_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_mp_LinearAlgebra.o: tropo_mp_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_mp_Rates.o: tropo_mp_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_mp_Hessian.o:  tropo_mp_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_mp_Stoichiom.o: tropo_mp_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_mp_Util.o: tropo_mp_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

