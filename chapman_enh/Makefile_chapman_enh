# Set here the desired C compiler and its optimization options
CC   = icc
#COPT = -O2 -m32 -fsingle-precision-constant
#DEBUG
COPT = -O3 -fp-model=precise

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = chapman_enh_Global.h  chapman_enh_Parameters.h  chapman_enh_Sparse.h

SPSRC = chapman_enh_JacobianSP.c \
	chapman_enh_HessianSP.c  \
	chapman_enh_StoichiomSP.c

SPOBJ = chapman_enh_JacobianSP.o \
	chapman_enh_HessianSP.o  \
	chapman_enh_StoichiomSP.o


SRC =   chapman_enh_Main.c      chapman_enh_Integrator.c   \
	chapman_enh_Function.c  chapman_enh_Initialize.c   \
	chapman_enh_Jacobian.c  chapman_enh_LinearAlgebra.c\
	chapman_enh_Rates.c     chapman_enh_Hessian.c      \
	chapman_enh_Stoichiom.c chapman_enh_Util.c         \
	chapman_enh_Monitor.c

OBJ =   chapman_enh_Main.o      chapman_enh_Integrator.o   \
	chapman_enh_Function.o  chapman_enh_Initialize.o   \
	chapman_enh_Jacobian.o  chapman_enh_LinearAlgebra.o\
	chapman_enh_Rates.o     chapman_enh_Hessian.o      \
	chapman_enh_Stoichiom.o chapman_enh_Util.o         \
	chapman_enh_Monitor.o

STOCHSRC = chapman_enh_Stochastic.c 
STOCHOBJ = chapman_enh_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o chapman_enh.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o chapman_enh_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O chapman_enh_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O chapman_enh_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O chapman_enh_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) chapman_enh.exe chapman_enh_*.mexglx chapman_enh*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) chapman_enh.exe chapman_enh*.dat \
	chapman_enh_*.c chapman_enh_*.h chapman_enh_*.map chapman_enh_*.mexglx

chapman_enh_Monitor.o: chapman_enh_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_enh_JacobianSP.o: chapman_enh_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_enh_HessianSP.o: chapman_enh_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_enh_StoichiomSP.o: chapman_enh_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_enh_Main.o: chapman_enh_Main.c chapman_enh_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_enh_Integrator.o: chapman_enh_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_enh_Initialize.o: chapman_enh_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_enh_Function.o: chapman_enh_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_enh_Stochastic.o: chapman_enh_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_enh_Jacobian.o: chapman_enh_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_enh_LinearAlgebra.o: chapman_enh_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_enh_Rates.o: chapman_enh_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_enh_Hessian.o:  chapman_enh_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_enh_Stoichiom.o: chapman_enh_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_enh_Util.o: chapman_enh_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

