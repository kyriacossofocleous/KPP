# Set here the desired C compiler and its optimization options
CC   = icc
#COPT = -O2 -m32 -fsingle-precision-constant
#DEBUG
COPT = -O3 -fp-model=precise

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = cbm4_enh_Global.h  cbm4_enh_Parameters.h  cbm4_enh_Sparse.h

SPSRC = cbm4_enh_JacobianSP.c \
	cbm4_enh_HessianSP.c  \
	cbm4_enh_StoichiomSP.c

SPOBJ = cbm4_enh_JacobianSP.o \
	cbm4_enh_HessianSP.o  \
	cbm4_enh_StoichiomSP.o


SRC =   cbm4_enh_Main.c      cbm4_enh_Integrator.c   \
	cbm4_enh_Function.c  cbm4_enh_Initialize.c   \
	cbm4_enh_Jacobian.c  cbm4_enh_LinearAlgebra.c\
	cbm4_enh_Rates.c     cbm4_enh_Hessian.c      \
	cbm4_enh_Stoichiom.c cbm4_enh_Util.c         \
	cbm4_enh_Monitor.c

OBJ =   cbm4_enh_Main.o      cbm4_enh_Integrator.o   \
	cbm4_enh_Function.o  cbm4_enh_Initialize.o   \
	cbm4_enh_Jacobian.o  cbm4_enh_LinearAlgebra.o\
	cbm4_enh_Rates.o     cbm4_enh_Hessian.o      \
	cbm4_enh_Stoichiom.o cbm4_enh_Util.o         \
	cbm4_enh_Monitor.o

STOCHSRC = cbm4_enh_Stochastic.c 
STOCHOBJ = cbm4_enh_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o cbm4_enh.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o cbm4_enh_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O cbm4_enh_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O cbm4_enh_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O cbm4_enh_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) cbm4_enh.exe cbm4_enh_*.mexglx cbm4_enh*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) cbm4_enh.exe cbm4_enh*.dat \
	cbm4_enh_*.c cbm4_enh_*.h cbm4_enh_*.map cbm4_enh_*.mexglx

cbm4_enh_Monitor.o: cbm4_enh_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

cbm4_enh_JacobianSP.o: cbm4_enh_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

cbm4_enh_HessianSP.o: cbm4_enh_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

cbm4_enh_StoichiomSP.o: cbm4_enh_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

cbm4_enh_Main.o: cbm4_enh_Main.c cbm4_enh_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_enh_Integrator.o: cbm4_enh_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_enh_Initialize.o: cbm4_enh_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_enh_Function.o: cbm4_enh_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_enh_Stochastic.o: cbm4_enh_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_enh_Jacobian.o: cbm4_enh_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_enh_LinearAlgebra.o: cbm4_enh_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_enh_Rates.o: cbm4_enh_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_enh_Hessian.o:  cbm4_enh_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_enh_Stoichiom.o: cbm4_enh_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_enh_Util.o: cbm4_enh_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

