# Set here the desired C compiler and its optimization options
CC   = gcc
COPT = -O3

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = small_dp_Global.h  small_dp_Parameters.h  small_dp_Sparse.h

SPSRC = small_dp_JacobianSP.c \
	small_dp_HessianSP.c  \
	small_dp_StoichiomSP.c

SPOBJ = small_dp_JacobianSP.o \
	small_dp_HessianSP.o  \
	small_dp_StoichiomSP.o


SRC =   small_dp_Main.c      small_dp_Integrator.c   \
	small_dp_Function.c  small_dp_Initialize.c   \
	small_dp_Jacobian.c  small_dp_LinearAlgebra.c\
	small_dp_Rates.c     small_dp_Hessian.c      \
	small_dp_Stoichiom.c small_dp_Util.c         \
	small_dp_Monitor.c

OBJ =   small_dp_Main.o      small_dp_Integrator.o   \
	small_dp_Function.o  small_dp_Initialize.o   \
	small_dp_Jacobian.o  small_dp_LinearAlgebra.o\
	small_dp_Rates.o     small_dp_Hessian.o      \
	small_dp_Stoichiom.o small_dp_Util.o         \
	small_dp_Monitor.o

STOCHSRC = small_dp_Stochastic.c 
STOCHOBJ = small_dp_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o small_dp.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o small_dp_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O small_dp_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O small_dp_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O small_dp_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) small_dp.exe small_dp_*.mexglx small_dp*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) small_dp.exe small_dp*.dat \
	small_dp_*.c small_dp_*.h small_dp_*.map small_dp_*.mexglx

small_dp_Monitor.o: small_dp_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

small_dp_JacobianSP.o: small_dp_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

small_dp_HessianSP.o: small_dp_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

small_dp_StoichiomSP.o: small_dp_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

small_dp_Main.o: small_dp_Main.c small_dp_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_dp_Integrator.o: small_dp_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_dp_Initialize.o: small_dp_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_dp_Function.o: small_dp_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_dp_Stochastic.o: small_dp_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_dp_Jacobian.o: small_dp_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_dp_LinearAlgebra.o: small_dp_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_dp_Rates.o: small_dp_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_dp_Hessian.o:  small_dp_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_dp_Stoichiom.o: small_dp_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

small_dp_Util.o: small_dp_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

