# Set here the desired C compiler and its optimization options
CC   = gcc
COPT = -O3

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = tropo_dp_Global.h  tropo_dp_Parameters.h  tropo_dp_Sparse.h

SPSRC = tropo_dp_JacobianSP.c \
	tropo_dp_HessianSP.c  \
	tropo_dp_StoichiomSP.c

SPOBJ = tropo_dp_JacobianSP.o \
	tropo_dp_HessianSP.o  \
	tropo_dp_StoichiomSP.o


SRC =   tropo_dp_Main.c      tropo_dp_Integrator.c   \
	tropo_dp_Function.c  tropo_dp_Initialize.c   \
	tropo_dp_Jacobian.c  tropo_dp_LinearAlgebra.c\
	tropo_dp_Rates.c     tropo_dp_Hessian.c      \
	tropo_dp_Stoichiom.c tropo_dp_Util.c         \
	tropo_dp_Monitor.c

OBJ =   tropo_dp_Main.o      tropo_dp_Integrator.o   \
	tropo_dp_Function.o  tropo_dp_Initialize.o   \
	tropo_dp_Jacobian.o  tropo_dp_LinearAlgebra.o\
	tropo_dp_Rates.o     tropo_dp_Hessian.o      \
	tropo_dp_Stoichiom.o tropo_dp_Util.o         \
	tropo_dp_Monitor.o

STOCHSRC = tropo_dp_Stochastic.c 
STOCHOBJ = tropo_dp_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o tropo_dp.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o tropo_dp_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O tropo_dp_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O tropo_dp_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O tropo_dp_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) tropo_dp.exe tropo_dp_*.mexglx tropo_dp*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) tropo_dp.exe tropo_dp*.dat \
	tropo_dp_*.c tropo_dp_*.h tropo_dp_*.map tropo_dp_*.mexglx

tropo_dp_Monitor.o: tropo_dp_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

tropo_dp_JacobianSP.o: tropo_dp_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

tropo_dp_HessianSP.o: tropo_dp_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

tropo_dp_StoichiomSP.o: tropo_dp_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

tropo_dp_Main.o: tropo_dp_Main.c tropo_dp_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_dp_Integrator.o: tropo_dp_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_dp_Initialize.o: tropo_dp_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_dp_Function.o: tropo_dp_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_dp_Stochastic.o: tropo_dp_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_dp_Jacobian.o: tropo_dp_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_dp_LinearAlgebra.o: tropo_dp_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_dp_Rates.o: tropo_dp_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_dp_Hessian.o:  tropo_dp_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_dp_Stoichiom.o: tropo_dp_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_dp_Util.o: tropo_dp_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

