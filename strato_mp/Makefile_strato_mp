# Set here the desired C compiler and its optimization options
CC   = gcc
COPT = -O3

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = strato_mp_Global.h  strato_mp_Parameters.h  strato_mp_Sparse.h

SPSRC = strato_mp_JacobianSP.c \
	strato_mp_HessianSP.c  \
	strato_mp_StoichiomSP.c

SPOBJ = strato_mp_JacobianSP.o \
	strato_mp_HessianSP.o  \
	strato_mp_StoichiomSP.o


SRC =   strato_mp_Main.c      strato_mp_Integrator.c   \
	strato_mp_Function.c  strato_mp_Initialize.c   \
	strato_mp_Jacobian.c  strato_mp_LinearAlgebra.c\
	strato_mp_Rates.c     strato_mp_Hessian.c      \
	strato_mp_Stoichiom.c strato_mp_Util.c         \
	strato_mp_Monitor.c

OBJ =   strato_mp_Main.o      strato_mp_Integrator.o   \
	strato_mp_Function.o  strato_mp_Initialize.o   \
	strato_mp_Jacobian.o  strato_mp_LinearAlgebra.o\
	strato_mp_Rates.o     strato_mp_Hessian.o      \
	strato_mp_Stoichiom.o strato_mp_Util.o         \
	strato_mp_Monitor.o

STOCHSRC = strato_mp_Stochastic.c 
STOCHOBJ = strato_mp_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o strato_mp.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o strato_mp_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O strato_mp_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O strato_mp_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O strato_mp_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) strato_mp.exe strato_mp_*.mexglx strato_mp*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) strato_mp.exe strato_mp*.dat \
	strato_mp_*.c strato_mp_*.h strato_mp_*.map strato_mp_*.mexglx

strato_mp_Monitor.o: strato_mp_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

strato_mp_JacobianSP.o: strato_mp_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

strato_mp_HessianSP.o: strato_mp_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

strato_mp_StoichiomSP.o: strato_mp_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

strato_mp_Main.o: strato_mp_Main.c strato_mp_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_mp_Integrator.o: strato_mp_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_mp_Initialize.o: strato_mp_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_mp_Function.o: strato_mp_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_mp_Stochastic.o: strato_mp_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_mp_Jacobian.o: strato_mp_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_mp_LinearAlgebra.o: strato_mp_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_mp_Rates.o: strato_mp_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_mp_Hessian.o:  strato_mp_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_mp_Stoichiom.o: strato_mp_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

strato_mp_Util.o: strato_mp_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

