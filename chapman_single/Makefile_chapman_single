# Set here the desired C compiler and its optimization options
CC   = icc
COPT = -O2 -fp-model=precise  

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = chapman_single_Global.h  chapman_single_Parameters.h  chapman_single_Sparse.h

SPSRC = chapman_single_JacobianSP.c \
	chapman_single_HessianSP.c  \
	chapman_single_StoichiomSP.c

SPOBJ = chapman_single_JacobianSP.o \
	chapman_single_HessianSP.o  \
	chapman_single_StoichiomSP.o


SRC =   chapman_single_Main.c      chapman_single_Integrator.c   \
	chapman_single_Function.c  chapman_single_Initialize.c   \
	chapman_single_Jacobian.c  chapman_single_LinearAlgebra.c\
	chapman_single_Rates.c     chapman_single_Hessian.c      \
	chapman_single_Stoichiom.c chapman_single_Util.c         \
	chapman_single_Monitor.c

OBJ =   chapman_single_Main.o      chapman_single_Integrator.o   \
	chapman_single_Function.o  chapman_single_Initialize.o   \
	chapman_single_Jacobian.o  chapman_single_LinearAlgebra.o\
	chapman_single_Rates.o     chapman_single_Hessian.o      \
	chapman_single_Stoichiom.o chapman_single_Util.o         \
	chapman_single_Monitor.o

STOCHSRC = chapman_single_Stochastic.c 
STOCHOBJ = chapman_single_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o chapman_single.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o chapman_single_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O chapman_single_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O chapman_single_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O chapman_single_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) chapman_single.exe chapman_single_*.mexglx chapman_single*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) chapman_single.exe chapman_single*.dat \
	chapman_single_*.c chapman_single_*.h chapman_single_*.map chapman_single_*.mexglx

chapman_single_Monitor.o: chapman_single_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_single_JacobianSP.o: chapman_single_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_single_HessianSP.o: chapman_single_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_single_StoichiomSP.o: chapman_single_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

chapman_single_Main.o: chapman_single_Main.c chapman_single_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_single_Integrator.o: chapman_single_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_single_Initialize.o: chapman_single_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_single_Function.o: chapman_single_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_single_Stochastic.o: chapman_single_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_single_Jacobian.o: chapman_single_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_single_LinearAlgebra.o: chapman_single_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_single_Rates.o: chapman_single_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_single_Hessian.o:  chapman_single_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_single_Stoichiom.o: chapman_single_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

chapman_single_Util.o: chapman_single_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

