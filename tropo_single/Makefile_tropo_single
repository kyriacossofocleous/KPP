# Set here the desired C compiler and its optimization options
CC   = gcc
COPT = -O -Wall  

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = tropo_single_Global.h  tropo_single_Parameters.h  tropo_single_Sparse.h

SPSRC = tropo_single_JacobianSP.c \
	tropo_single_HessianSP.c  \
	tropo_single_StoichiomSP.c

SPOBJ = tropo_single_JacobianSP.o \
	tropo_single_HessianSP.o  \
	tropo_single_StoichiomSP.o


SRC =   tropo_single_Main.c      tropo_single_Integrator.c   \
	tropo_single_Function.c  tropo_single_Initialize.c   \
	tropo_single_Jacobian.c  tropo_single_LinearAlgebra.c\
	tropo_single_Rates.c     tropo_single_Hessian.c      \
	tropo_single_Stoichiom.c tropo_single_Util.c         \
	tropo_single_Monitor.c

OBJ =   tropo_single_Main.o      tropo_single_Integrator.o   \
	tropo_single_Function.o  tropo_single_Initialize.o   \
	tropo_single_Jacobian.o  tropo_single_LinearAlgebra.o\
	tropo_single_Rates.o     tropo_single_Hessian.o      \
	tropo_single_Stoichiom.o tropo_single_Util.o         \
	tropo_single_Monitor.o

STOCHSRC = tropo_single_Stochastic.c 
STOCHOBJ = tropo_single_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o tropo_single.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o tropo_single_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O tropo_single_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O tropo_single_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O tropo_single_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) tropo_single.exe tropo_single_*.mexglx tropo_single*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) tropo_single.exe tropo_single*.dat \
	tropo_single_*.c tropo_single_*.h tropo_single_*.map tropo_single_*.mexglx

tropo_single_Monitor.o: tropo_single_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

tropo_single_JacobianSP.o: tropo_single_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

tropo_single_HessianSP.o: tropo_single_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

tropo_single_StoichiomSP.o: tropo_single_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

tropo_single_Main.o: tropo_single_Main.c tropo_single_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_single_Integrator.o: tropo_single_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_single_Initialize.o: tropo_single_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_single_Function.o: tropo_single_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_single_Stochastic.o: tropo_single_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_single_Jacobian.o: tropo_single_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_single_LinearAlgebra.o: tropo_single_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_single_Rates.o: tropo_single_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_single_Hessian.o:  tropo_single_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_single_Stoichiom.o: tropo_single_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

tropo_single_Util.o: tropo_single_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

