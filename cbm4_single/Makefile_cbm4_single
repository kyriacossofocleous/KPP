# Set here the desired C compiler and its optimization options
CC   = icc
COPT = -O2 -fp-model=precise  

# To create Matlab gateway routines
# Note: use $(CC) as the mex C compiler
MEX  = mex

HEADERS = cbm4_single_Global.h  cbm4_single_Parameters.h  cbm4_single_Sparse.h

SPSRC = cbm4_single_JacobianSP.c \
	cbm4_single_HessianSP.c  \
	cbm4_single_StoichiomSP.c

SPOBJ = cbm4_single_JacobianSP.o \
	cbm4_single_HessianSP.o  \
	cbm4_single_StoichiomSP.o


SRC =   cbm4_single_Main.c      cbm4_single_Integrator.c   \
	cbm4_single_Function.c  cbm4_single_Initialize.c   \
	cbm4_single_Jacobian.c  cbm4_single_LinearAlgebra.c\
	cbm4_single_Rates.c     cbm4_single_Hessian.c      \
	cbm4_single_Stoichiom.c cbm4_single_Util.c         \
	cbm4_single_Monitor.c

OBJ =   cbm4_single_Main.o      cbm4_single_Integrator.o   \
	cbm4_single_Function.o  cbm4_single_Initialize.o   \
	cbm4_single_Jacobian.o  cbm4_single_LinearAlgebra.o\
	cbm4_single_Rates.o     cbm4_single_Hessian.o      \
	cbm4_single_Stoichiom.o cbm4_single_Util.o         \
	cbm4_single_Monitor.o

STOCHSRC = cbm4_single_Stochastic.c 
STOCHOBJ = cbm4_single_Stochastic.o 

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) -lm -o cbm4_single.exe	

stochastic:$(HEADERS) $(SPOBJ) $(OBJ) $(STOCHOBJ)
	$(CC) $(COPT) $(SPOBJ) $(OBJ) $(STOCHOBJ) -lm \
	-o cbm4_single_stochastic.exe	

mex:    $(HEADERS) $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O cbm4_single_mex_Fun.c     -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O cbm4_single_mex_Jac_SP.c  -lm $(SPOBJ) $(OBJ)
	$(MEX) CC#$(CC) -O cbm4_single_mex_Hessian.c -lm $(SPOBJ) $(OBJ)


clean:
	rm -f $(SPOBJ) $(OBJ) cbm4_single.exe cbm4_single_*.mexglx cbm4_single*.dat

distclean:
	rm -f $(SPOBJ) $(OBJ) cbm4_single.exe cbm4_single*.dat \
	cbm4_single_*.c cbm4_single_*.h cbm4_single_*.map cbm4_single_*.mexglx

cbm4_single_Monitor.o: cbm4_single_Monitor.c $(HEADERS)
	$(CC) $(COPT) -c $<

cbm4_single_JacobianSP.o: cbm4_single_JacobianSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

cbm4_single_HessianSP.o: cbm4_single_HessianSP.c  $(HEADERS)
	$(CC) $(COPT) -c $<

cbm4_single_StoichiomSP.o: cbm4_single_StoichiomSP.c $(HEADERS)
	$(CC) $(COPT) -c $<

cbm4_single_Main.o: cbm4_single_Main.c cbm4_single_Initialize.o $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_single_Integrator.o: cbm4_single_Integrator.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_single_Initialize.o: cbm4_single_Initialize.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_single_Function.o: cbm4_single_Function.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_single_Stochastic.o: cbm4_single_Stochastic.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_single_Jacobian.o: cbm4_single_Jacobian.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_single_LinearAlgebra.o: cbm4_single_LinearAlgebra.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_single_Rates.o: cbm4_single_Rates.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_single_Hessian.o:  cbm4_single_Hessian.c $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_single_Stoichiom.o: cbm4_single_Stoichiom.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

cbm4_single_Util.o: cbm4_single_Util.c  $(HEADERS) $(SPOBJ)
	$(CC) $(COPT) -c $<

