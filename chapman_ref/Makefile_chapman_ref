# Set here the Fortran77 compiler and the desired optimization options
COMPILER = INTEL

FC_INTEL   = ifort
FOPT_INTEL = -O -f77rtl -fp-model=precise -pc80 -prec-div
FC_PGF     = pgf77
FOPT_PGF   = -O -fast -pc 80 -Kieee
FC_GNU     = g77
FOPT_GNU   = -O -Wall -Wimplicit -ffast-math -funroll-loops \
	         -malign-double -ffortran-bounds-check
FC_HPUX    = f90
FOPT_HPUX  = -O

FC   = $(FC_$(COMPILER))
FOPT = $(FOPT_$(COMPILER)) 

# Mathematical libraries: blas and lapack
# MATHLIB   = -L/usr/local/lib  -llapack_g77  -L/usr/lib -lblas_g77
MATHLIB   = -llapack  -lblas 

# To create Matlab mex gateway routines
# Note: use $(FC) as the mex Fortran compiler
MEX  = mex

HEADERS = chapman_ref_Global.h  chapman_ref_Parameters.h  chapman_ref_Sparse.h

#SPSRC = chapman_ref_JacobianSP.f \
#	chapman_ref_HessianSP.f  \
#	chapman_ref_StoichiomSP.f

#SPOBJ = chapman_ref_JacobianSP.o \
#	chapman_ref_HessianSP.o  \
#	chapman_ref_StoichiomSP.o


SRC =   chapman_ref_Main.f      chapman_ref_Integrator.f   \
        chapman_ref_Function.f  chapman_ref_Initialize.f   \
	chapman_ref_Jacobian.f  chapman_ref_LinearAlgebra.f\
	chapman_ref_Rates.f     chapman_ref_Hessian.f      \
	chapman_ref_Stoichiom.f chapman_ref_Util.f         \
	chapman_ref_Monitor.f   

OBJ =   chapman_ref_Main.o      chapman_ref_Integrator.o   \
        chapman_ref_Function.o  chapman_ref_Initialize.o   \
	chapman_ref_Jacobian.o  chapman_ref_LinearAlgebra.o\
	chapman_ref_Rates.o     chapman_ref_Hessian.o      \
	chapman_ref_Stoichiom.o chapman_ref_Util.o         \
	chapman_ref_Monitor.o

all:    exe

exe:	$(HEADERS) $(SPOBJ) $(OBJ)
	$(FC) $(FOPT) $(SPOBJ) $(OBJ) $(MATHLIB) -o chapman_ref.exe

#mex:    $(HEADERS) $(SPOBJ) $(OBJ)
#	$(MEX) FC#$(FC) -fortran -O chapman_ref_mex_Fun.f     $(SPOBJ) $(OBJ)
#	$(MEX) FC#$(FC) -fortran -O chapman_ref_mex_Jac_SP.f  $(SPOBJ) $(OBJ)
#	$(MEX) FC#$(FC) -fortran -O chapman_ref_mex_Hessian.f $(SPOBJ) $(OBJ)
	
clean:
	rm -f $(SPOBJ) $(OBJ) chapman_ref.exe chapman_ref.map  \
	chapman_ref.dat 

distclean:
	rm -f $(SPOBJ) $(OBJ) chapman_ref.exe chapman_ref.map  \
	chapman_ref.dat chapman_ref*.f  chapman_ref*.h 

chapman_ref_Monitor.o: chapman_ref_Monitor.f $(HEADERS)
	$(FC) $(FOPT) -c $<

chapman_ref_JacobianSP.o: chapman_ref_JacobianSP.f $(HEADERS)
	$(FC) $(FOPT) -c $<

chapman_ref_HessianSP.o: chapman_ref_HessianSP.f  $(HEADERS)
	$(FC) $(FOPT) -c $<

chapman_ref_StoichiomSP.o: chapman_ref_StoichiomSP.f $(HEADERS)
	$(FC) $(FOPT) -c $<

chapman_ref_Main.o: chapman_ref_Main.f  chapman_ref_Initialize.o $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

chapman_ref_Integrator.o: chapman_ref_Integrator.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

chapman_ref_Initialize.o: chapman_ref_Initialize.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

chapman_ref_Function.o: chapman_ref_Function.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

chapman_ref_Jacobian.o: chapman_ref_Jacobian.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

chapman_ref_LinearAlgebra.o: chapman_ref_LinearAlgebra.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

chapman_ref_Rates.o: chapman_ref_Rates.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

chapman_ref_Hessian.o:  chapman_ref_Hessian.f $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

chapman_ref_Stoichiom.o: chapman_ref_Stoichiom.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

chapman_ref_Util.o: chapman_ref_Util.f  $(HEADERS) $(SPOBJ)
	$(FC) $(FOPT) -c $<

